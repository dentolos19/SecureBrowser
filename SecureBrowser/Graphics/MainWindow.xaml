<sf:ChromelessWindow x:Class="SecureBrowser.Graphics.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sf="http://schemas.syncfusion.com/wpf"
        xmlns:sbb="clr-namespace:SecureBrowser.Core.Bindings"
        Title="SecureBrowser">
    <sf:TabControlExt x:Name="Tabs" AllowDragDrop="True" CloseButtonType="Individual" IsNewButtonEnabled="True" NewButtonClick="AddTab" TabClosed="RemoveTab">
        <TabControl.ItemTemplate>
            <DataTemplate DataType="sbb:TabBinding">
                <TextBlock Text="{Binding Path=Content.Title}" ToolTip="{Binding Path=Content.Title}"/>
            </DataTemplate>
        </TabControl.ItemTemplate>
        <sf:TabControlExt.ContentTemplate>
            <DataTemplate DataType="sbb:TabBinding">
                <Frame Content="{Binding Path=Content}" NavigationUIVisibility="Hidden"/>
            </DataTemplate>
        </sf:TabControlExt.ContentTemplate>
    </sf:TabControlExt>
</sf:ChromelessWindow>