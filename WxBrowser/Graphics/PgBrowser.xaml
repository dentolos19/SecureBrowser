<Page x:Class="WxBrowser.Graphics.PgBrowser"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:webView="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
      Title="New Tab">
    <TabControl x:Name="ViewControl">
        <TabItem Visibility="Collapsed">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="5"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="5"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="5"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="5"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="5"/>
                </Grid.RowDefinitions>
                <Grid Grid.Column="1" Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="5"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="5"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="5"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="5"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="5"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="0" Content="&#xE72B;" FontFamily="Segoe MDL2 Assets" Width="20" Height="20" Click="GoBack"/>
                    <Button Grid.Column="2" Content="&#xE72A;" FontFamily="Segoe MDL2 Assets" Width="20" Height="20" Click="GoForward"/>
                    <Button Grid.Column="4" Content="&#xE72C;" FontFamily="Segoe MDL2 Assets" Width="20" Height="20" Click="RefreshPage"/>
                    <Button Grid.Column="6" Content="&#xE80F;" FontFamily="Segoe MDL2 Assets" Width="20" Height="20" Click="GoHome"/>
                    <TextBox x:Name="AddressBar" Grid.Column="8" VerticalContentAlignment="Center" KeyUp="NavigateToAddress"/>
                </Grid>
                <webView:WebView2 x:Name="WebView" Grid.Column="1" Grid.Row="3"/>
            </Grid>
        </TabItem>
        <TabItem Visibility="Collapsed">
            <TextBlock Text="You must have WebView2 Runtime installed in order to use this application!" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </TabItem>
    </TabControl>
</Page>